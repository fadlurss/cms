<% include ../../layouts/admin/header %>  
    <div class="container">
        
            <div class="row">
                <div class="col-sm-5">
                        <h1>Create Categories</h1>
                    <form action="/admin/categories/create" method="POST">
                        <div class="form-group">
                            <label for="">Name</label>
                            <input type="text" name="name" class="form-control" placeholder="Enter name categories">
                        </div>
                        <div class="form-group">
                        <button class="btn btn-primary">Add categories</button>
                        </div>
                    </form>
                </div>
                <div class="col-sm-7">
                        <h1>Categories</h1>
                    <table class="table">
                        <thead>
                            <tr>
                               <th>Id</th>
                               <th>Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categories.forEach(function(hasil){ %>
                            <tr>
                                <td><%= hasil.id %></td>
                                <td><%= hasil.name %></td>
                                <td><a href="/admin/categories/edit/<%= hasil.id %>" class="btn btn-info btn-sm">Edit Categories</a>
                                    <form action="/admin/categories/<%= hasil.id %>?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-danger btn-sm" >Delete Categories</button>
                                    </form>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
    </div>
    
<% include ../../layouts/admin/footer %>  
