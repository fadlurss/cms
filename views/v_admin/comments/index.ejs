<% include ../../layouts/admin/header %> 
<h1>Comments</h1>
<table class="table">
    <thead>
        
        <tr>
            <th>Id</th>
            <th>Owner</th>
           
        </tr>
    </thead>
    <tbody>
    <% comments.forEach(function(hasil){ %>
        <tr>
            <td><%= hasil.id %></td>
            <td><%= hasil.user%></td>
            
            <td>
                <a class="btn btn-info" href="/admin/comments/<%= hasil.id %>">Edit</a>
                <form action"/admin/comments/<%= hasil.id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
     <% }) %>
    </tbody>
</table>
<% include ../../layouts/admin/footer %>  
