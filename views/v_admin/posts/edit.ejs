<% include ../../layouts/admin/header %> 
    <div class="container">
            <h1>Edit Post</h1>
            <form action="/admin/posts/edit/<%= edit_posts._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">Title</label>
                    <input type="text" name="title" class="form-control" value="<%= edit_posts.title %>" placeholder="Enter title">
                </div>
                <div class="form-group">
                        <label for="">Upload File</label>
                        <input type="file" name="file" class="form-control">
                </div>
                <div class="form-group">
                        <label for="">Status</label>
                        <select name="status" id="status" class="form-control" id="">
                            <option value="public">public</option>
                            <option value="private">private</option>
                            <option value="draft">draft</option>
                        </select>
                    </div>
                <div class="form-check-label">
                    <label for="">
                        <input type="checkbox" value="<%= edit_posts.allowComments %>" name="allowComments" class="form-check-input" id="allowComments" <% if(edit_posts.allowComments ) { %> checked="checked" <% }; %> placeholder="">
                        Allow Comments
                    </label>
                </div>
                <div class="form-group">
                        <label for="">Body</label>
                        <textarea name="body" id="body" cols="30" rows="10" value="<%= edit_posts.body %>" class="form-control"  placeholder="<%= edit_posts.body %>"></textarea>
                </div>
                <div class="form-group">
                        <button type="submit" class="btn btn-primary">Update Post</button>
                </div>
            </form>
    </div>
<% include ../../layouts/admin/footer %>